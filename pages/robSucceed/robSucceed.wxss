page {
  background-color: #f0f4f8;
}

.carInfo {
  width: 690rpx;
  height: 783rpx;
  background: #fff;
  border-radius: 50px;
  margin: 0 auto;
  margin-top: 30rpx;
}

.sheet {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
  width: 611rpx;
  margin: 0 auto;
}

.sheet .caption {
  color: #333333;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  position: relative;
  margin-left: 30rpx;
}

.check {
  height: 150rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
}

.check text {
  width: 100%;
  text-align: center;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}

