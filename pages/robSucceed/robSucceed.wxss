.info .caption:after {
  background: #FF0000;
}

.type .caption:after {
  background: #0F2D5F;
}

.site .caption:after {
  width: 0;
}

.sheet .gut {
  color: #999999;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  position: relative;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.upCarImg {
  border: none;
}

.carImg {
  margin-left: 200rpx;
  margin-top: 200rpx;
}

.btnList {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  padding: 30rpx;
  width: 630rpx;
  height: 229rpx;
  background: #FFFFFF;
  border-radius: 50rpx;
  margin: 0 auto;
  margin-top: 40rpx;
}

.submit {
  width: 229rpx;
  height: 60rpx;
  background: #F0D208;
  border-radius: 25rpx;
  text-align: center;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #333333;
  line-height: 60rpx;
  font-size: 30rpx;
}