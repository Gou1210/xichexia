<!--pages/changePassword/changePassword.wxml-->
<view class="wrap">
  <view class="user-info">
    <van-cell-group>
      <van-field label="旧密码" model:value="{{oldPassword}}" required placeholder="请输入" />
      <van-field label="新密码" model:value="{{newPassword}}" required placeholder="请输入" />
      <van-field label="确认新密码" model:value="{{newPassword2}}" required placeholder="请输入" />
    </van-cell-group>
    <view class="btn-area">
      <view class="submit"  bindtap="bindEdit" >修改</view>
    </view>
  </view>
  <van-toast id="van-toast" />
</view>
